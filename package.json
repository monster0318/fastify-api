{
  "name": "invest-platform-api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx src/server.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/src/server.js",
    "prisma:generate": "prisma generate",
    "prisma:dbpush": "prisma db push",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:seed": "node --loader ts-node/esm prisma/seed.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:knock": "node test-knock.js",
    "test:notifications": "node test-notifications.js",
    "test:all": "npm run test:run && npm run test:knock && npm run test:notifications",
    "lint": "eslint src prisma --ext .ts,.js",
    "lint:fix": "eslint src prisma --ext .ts,.js --fix",
    "format": "prettier --write src prisma",
    "format:check": "prettier --check src prisma",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/jwt": "^10.0.0",
    "@fastify/multipart": "^9.2.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/secure-session": "^8.2.0",
    "@fastify/websocket": "^11.2.0",
    "@knocklabs/node": "^1.16.0",
    "@prisma/client": "^6.16.2",
    "ably": "^2.13.0",
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "fastify": "^5.6.0",
    "form-data": "^4.0.4",
    "node-fetch": "^3.3.2",
    "prisma": "^6.16.2",
    "uuid": "^13.0.0",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
